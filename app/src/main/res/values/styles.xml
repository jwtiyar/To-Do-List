<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Color attributes -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_container</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorTertiary">@color/tertiary</item>
        <item name="colorTertiaryContainer">@color/tertiary_container</item>
        <item name="colorOnTertiary">@color/on_tertiary</item>
        <item name="colorError">@color/error</item>
        <item name="colorErrorContainer">@color/error_container</item>
        <item name="colorOnError">@color/on_error</item>
        <item name="colorOnErrorContainer">@color/on_error_container</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="android:colorBackgroundFloating">@color/surface</item>
        <item name="android:colorForeground">@color/on_background</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        <item name="colorOutline">@color/outline</item>
        <item name="colorOutlineVariant">@color/outline_variant</item>
        
        <!-- Surface tint for Material 3 components -->
        <item name="colorPrimarySurface">@color/primary</item>
        <item name="colorOnPrimarySurface">@color/on_primary</item>
        
        <!-- Window attributes -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <!-- <item name="android:windowLightNavigationBar">?attr/isLightTheme</item> -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- <item name="android:enforceNavigationBarContrast">false</item> -->
        
        <!-- Text appearance -->
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.Material3.HeadlineSmall</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.Material3.TitleMedium</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Material3.BodyMedium</item>
        
        <!-- Component styles -->
        <item name="materialButtonStyle">@style/Widget.Material3.Button</item>
        <item name="materialCardViewStyle">@style/Widget.Material3.CardView</item>
        <item name="floatingActionButtonStyle">@style/Widget.Material3.FloatingActionButton</item>
        
        <!-- Shape appearance -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Material3.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Material3.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Material3.LargeComponent</item>
        
        <!-- Material 3 attributes -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayAccentColor">@color/elevation_overlay_accent</item>
        <item name="elevationOverlayColor">@color/elevation_overlay</item>
        <item name="isLightTheme">true</item>
        <item name="colorPrimaryDark">?attr/colorPrimary</item>
    </style>
    
    <!-- Material 3 CardView style -->
    <style name="Widget.Material3.CardView" parent="">
        <item name="android:background">?attr/colorSurface</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardMaxElevation">@dimen/card_elevation</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="contentPadding">@dimen/card_content_padding</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.MediumComponent</item>
    </style>
    
    <!-- Material 3 FloatingActionButton style -->
    <style name="Widget.Material3.FloatingActionButton" parent="">
        <item name="backgroundTint">?attr/colorPrimaryContainer</item>
        <item name="tint">?attr/colorOnPrimaryContainer</item>
        <item name="elevation">@dimen/fab_elevation</item>
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="showMotionSpec">@animator/fab_show_motion_spec</item>
        <item name="hideMotionSpec">@animator/fab_hide_motion_spec</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.LargeComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="borderWidth">0dp</item>
        <item name="rippleColor">@color/state_layer_primary</item>
    </style>
    
    <!-- Shape appearance styles -->
    <style name="ShapeAppearance.Material3.SmallComponent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>
    
    <style name="ShapeAppearance.Material3.MediumComponent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="ShapeAppearance.Material3.LargeComponent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <!-- Text appearance styles -->
    <style name="TextAppearance.Material3.HeadlineSmall" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_headline_small</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    
    <style name="TextAppearance.Material3.TitleMedium" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/text_title_medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.009375</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    
    <style name="TextAppearance.Material3.BodyMedium" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_body_medium</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.017857143</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>
</resources>
