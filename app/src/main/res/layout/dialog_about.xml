<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/aboutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Simpler Task"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/aboutSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simpler Task helps you organize your daily tasks, set reminders, and stay productive. Features include beautiful dark/light themes, intuitive tab navigation, and persistent notifications for your important tasks."
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/aboutAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developed by: Jwtyar Nariman"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/aboutEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: jwtiyar@gmail.com"
            android:autoLink="email"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/aboutGithub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GitHub: https://github.com/jwtiyar"
            android:autoLink="web"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
    </LinearLayout>
</ScrollView>
